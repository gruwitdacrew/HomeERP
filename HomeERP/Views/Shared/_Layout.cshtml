@using HomeERP.Domain.Common.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeERP</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomeERP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="EAV" asp-action="Explorer">HomeERP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="display: flex;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EAV" asp-action="Explorer">Explorer</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="FileOverview" asp-action="Overview">FileOverview</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Chore" asp-action="ChoreExplorer">Chore</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Inventory">Product</a>
                        </li>
                    </ul>
                </div>
                <div id="userList"></div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin: 0; max-width: none;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function() {
        $.ajax({
            url: "/EAV/GetUsers",
            type: 'GET',
            success: function(data) {
                $('#userList').html(data);
            }
        });
    });
</script>
