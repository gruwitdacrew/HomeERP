@using HomeERP.Models.EAV.Domain;
@using HomeERP.Models.Chore.Domain;
@using Attribute = HomeERP.Models.EAV.Domain.Attribute;
@using Object = HomeERP.Models.EAV.Domain.Object;
@model Chore

<div id="collapse@(TempData["Counter"])" class="accordion-collapse collapse show">
    <div class="accordion-body">
        <div class="list-group">
            @foreach (Object Object in Model.Attribute.Entity.Objects)
            {
                <div class="card">
                    <div class="card-body d-flex justify-content-between py-1 px-4 bg-warning bg-gradient">
                        <div>Кухня</div>
                        <div>Осталось 5 дней</div>
                        <button>Выполнить</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
